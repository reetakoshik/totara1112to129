{{!
    @template core/help_icon

    Help icon.

    Context variables required for this template:
    * helpicon flex icon context

    Example context (json):
    {
        "title": "Help with something",
        "url": "http://example.org/help",
        "linktext": "",
        "alt": "Help icon",
        "icon":{
            "attributes": [
                {"name": "class", "value": "iconhelp"},
                {"name": "src", "value": "../../../pix/help.svg"},
                {"name": "alt", "value": "Help icon"}
            ]
        }
    }
}}
<span class="helptooltip">
    <a href="{{url}}" title={{#quote}}{{title}}{{/quote}} aria-haspopup="true" target="_blank">{{#helpicon}}{{#context}}{{> &&template }}{{/context}}{{/helpicon}}{{#linktext}}{{.}}{{/linktext}}</a>
</span>
