{{!
    @template theme_basis/page_footer_nav
    @deprecated since 12.0

    Creates the footer navigation.

    IDs required for JS:
    * none

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * menuitems Array The menu items
    * subnav Array Items to display in sub-navigation bar
    * subnav_has_items Boolean True if subnav is not empty

    Example context (json):
    {
        "menuitems": [
            {
                "class_name": "mylearning",
                "class_isfirst": false,
                "class_islast": false,
                "class_isselected": true,
                "linktext": "My Learning",
                "url": "http://example.com",
                "target": "_self",
                "haschildren": true,
                "children": [
                    {
                        "class_name": "mybookings",
                        "class_isfirst": true,
                        "class_islast": false,
                        "class_isselected": false,
                        "linktext": "My Learning",
                        "url": "http://example.com",
                        "target": "_self",
                        "haschildren": false,
                        "children": []
                    }
                ]
            }
        ],
        "subnav": [
            {
                "class_name": "mybookings",
                "class_isfirst": true,
                "class_islast": false,
                "class_isselected": false,
                "linktext": "My Learning",
                "url": "http://example.com",
                "target": "_self",
                "haschildren": false,
                "children": []
            }
        ],
        "subnav_has_items": true
    }
}}
<div class="row">
    <nav class="page-footer-nav">
        {{#menuitems_has_items}}
        <ul class="page-footer-nav-list">
            {{#menuitems}}
            <li class="page-footer-nav-item col-xs-6 col-sm-3 col-md-2 text-truncate"><a class="page-footer-nav-item-link" href="{{url}}" target="{{target}}">{{{linktext}}}</a>
                {{#haschildren}}
                <ul class="page-footer-nav-list">
                    {{#children}}
                    <li class="page-footer-nav-item text-truncate">
                        <a class="page-footer-nav-item-link" target="{{target}}" href="{{url}}">{{{linktext}}}</a>
                    </li>
                    {{/children}}
                </ul>
                {{/haschildren}}
            </li>
            {{/menuitems}}
        </ul>
        {{/menuitems_has_items}}
    </nav>
</div>
