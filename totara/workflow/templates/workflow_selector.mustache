{{!
    @template totara_workflow/workflow_selector

    Example context (json):
    {
        "workflows": [
            {
                "name": "Test workflow",
                "description": "This is my test workflow",
                "url": "http://example.com/",
                "imageurl": "__WWWROOT__/course/defaultimage.svg"
            },
            {
                "name": "Another test workflow",
                "description": "This is another workflow with no image.",
                "url": "http://example.com/"
            }

        ]
    }
}}
<div class="row workflow-tile-selector">
    {{#workflows}}
    <div class="col-sm-6 col-lg-4">
        <a href="{{{url}}}" class="linked-panel">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="tile-image">
                    {{#imageurl}}
                        <img src="{{{imageurl}}}" alt="{{name}}" width="100" height="100" alt="{{name}}" class="img-fluid" />
                    {{/imageurl}}
                    </div>
                    <div class="tile-text">
                        <h4>{{name}}</h4>
                        {{description}}
                    </div>
                </div>
            </div>
        </a>
    </div>
    {{/workflows}}
</div>
