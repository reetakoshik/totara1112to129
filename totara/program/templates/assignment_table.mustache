{{!

    @template totara_program/assignment_table

    This template is for when program has assignments

    Classes required for JS:
    * totara_program__assignments__results__table: The table for showing the assignments

    Data attributes required for JS:
    * None

}}
<table class="totara_program__assignments__results__table">
    <thead>
        <tr>
            <th>{{#str}}name{{/str}}</th>
            <th></th>
            <th>{{#str}}duedatesettings,totara_program{{/str}}</th>
            <th>{{#str}}actualduedate,totara_program{{/str}}</th>
            {{#canupdate}}
                <th>{{#str}}numoflearners,totara_program{{/str}}</th>
                <th>{{#str}}actions{{/str}}</th>
            {{/canupdate}}
        </tr>
    </thead>
    <tbody>
        {{#items}}
            {{> totara_program/assignment__table__row}}
        {{/items}}
    </tbody>
</table>
