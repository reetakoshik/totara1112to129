{{!
    @template totara_core/masthead

    Constructs the totara masthead.

    Classes required for JS:
    * totaraNav

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * masthead_lang: Has masthead language data
    * masthead_logo: Has masthead_logo data
    * masthead_menu: The masthead navigation data
    * masthead_menu -> subnav_has_items: Bool for having subnav data
    * masthead_plugins: Has masthead plugins data (alert/messages)
    * masthead_toggle: Has mobile toggle button data
    * masthead_usermenu: Has masthead usermenu data
}}
<nav class="totaraNav" role="navigation">
    {{#masthead_menu}}
        {{> totara_core/nav_primary }}
        {{#subnav_has_items}}{{> totara_core/nav_sub }}{{/subnav_has_items}}
        {{#js}}
            require(['totara_core/totaranav'], function(totaraNav) {
                totaraNav.init(document.querySelector('.totaraNav'));
            });
        {{/js}}
    {{/masthead_menu}}
</nav>