{{!
    @template totara_contentmarketplace/filter_checkboxes_searchable_results

    Content Marketplace checkbox filter search results template

    Example context (json):
    {
        "results": [
            {
                "htmlid": "tcm-filter-tags-0",
                "value": "communication",
                "label": "Communication",
                "count": "1,234",
                "checked": false
            },
            {
                "htmlid": "tcm-filter-tags-1",
                "value": "development",
                "label": "Development",
                "count": "123",
                "checked": false
            },
            {
                "htmlid": "tcm-filter-tags-2",
                "value": "sales",
                "label": "Sales",
                "count": "1",
                "checked": false
            }
        ]
    }

}}
<div class="tcm-search-filter-selection">
    {{#results}}
        <div class="tcm-checkbox-filter totara_form_element_checkboxes_checkbox">
            <input type="checkbox" id="{{htmlid}}" name="{{name}}[]" value="{{value}}" {{#checked}}checked{{/checked}} />
            <label for="{{htmlid}}">
                <span class="tcm-filter-option-label" title="{{label}}">{{label}}</span>
                <span class="pull-right tcm-filter-option-count" data-value="{{value}}">{{count}}</span>
            </label>
        </div>
    {{/results}}
</div>
